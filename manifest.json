{
  "manifest_version": 2,
  "name": "Scroll Showoff",
  "description": "Scroll a website down slowly â€“ perfect for a screen recording",
  "version": "1.0.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/icons/icon.png",
      "38": "assets/icons/icon.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon.png",
    "48": "assets/icons/icon.png",
    "128": "assets/icons/icon.png"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "background"
  ]
}
